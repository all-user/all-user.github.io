{
  "name": "@all-user/ok-blocks-demos",
  "version": "0.0.1",
  "description": "OK Blocks Demos.",
  "main": "index.js",
  "scripts": {
    "build:common": "stylus -c ./src/stylus/common.styl -o ./src/demos/common.css -m",
    "build:demos:lines:all_char": "browserify -t babelify ./src/js/Lines/all_char_animate.js -o ./src/demos/Lines/all_char_animate/bundle.js & stylus -c ./src/stylus/all_char_animate.styl -o ./src/demos/Lines/all_char_animate/bundle.css -m",
    "build:demos:lines:str_anime": "browserify -t babelify ./src/js/Lines/string_animate.js -o ./src/demos/Lines/string_animate/bundle.js & stylus -c ./src/stylus/string_animate.styl -o ./src/demos/Lines/string_animate/bundle.css -m",
    "build:demos:lines:frm_txt": "browserify -t babelify ./src/js/Lines/animate_from_input.js -o ./src/demos/Lines/animate_from_input/bundle.js & stylus -c ./src/stylus/animate_from_input.styl -o ./src/demos/Lines/animate_from_input/bundle.css -m",
    "build:demos:lines:embed": "browserify -t babelify ./src/js/Lines/embed.js -o ./src/demos/Lines/embed/bundle.js & stylus -c ./src/stylus/embed.styl -o ./src/demos/Lines/embed/bundle.css -m",
    "build:demos:lines:embed_res": "browserify -t babelify ./src/js/Lines/embed_response.js -o ./src/demos/Lines/embed_response/bundle.js & stylus -c ./src/stylus/embed_response.styl -o ./src/demos/Lines/embed_response/bundle.css -m",
    "build:demos:olympic:all_char": "browserify -t babelify ./src/js/Olympic2020/all_char_animate.js -o ./src/demos/Olympic2020/all_char_animate/bundle.js & stylus -c ./src/stylus/all_char_animate.styl -o ./src/demos/Olympic2020/all_char_animate/bundle.css -m",
    "build:demos:olympic:str_anime": "browserify -t babelify ./src/js/Olympic2020/string_animate.js -o ./src/demos/Olympic2020/string_animate/bundle.js & stylus -c ./src/stylus/string_animate.styl -o ./src/demos/Olympic2020/string_animate/bundle.css -m",
    "build:demos:olympic:frm_txt": "browserify -t babelify ./src/js/Olympic2020/animate_from_input.js -o ./src/demos/Olympic2020/animate_from_input/bundle.js & stylus -c ./src/stylus/animate_from_input.styl -o ./src/demos/Olympic2020/animate_from_input/bundle.css -m",
    "build:demos:olympic:embed": "browserify -t babelify ./src/js/Olympic2020/embed.js -o ./src/demos/Olympic2020/embed/bundle.js & stylus -c ./src/stylus/embed.styl -o ./src/demos/Olympic2020/embed/bundle.css -m",
    "build:demos:olympic:embed_res": "browserify -t babelify ./src/js/Olympic2020/embed_response.js -o ./src/demos/Olympic2020/embed_response/bundle.js & stylus -c ./src/stylus/embed_response.styl -o ./src/demos/Olympic2020/embed_response/bundle.css -m",
    "vendor:copy": "cpx \"./node_modules/@all-user/ok-blocks/**/*\" ./src/vendor/@all-user/ok-blocks & cpx \"./node_modules/bootstrap/**/*\" ./src/vendor/bootstrap",
    "vendor": "npm run vendor:copy",
    "build:demos": "npm-run-all -p build:demos:**:*",
    "watch:dmeos": "watch \"npm run build:demos\" ./src/js/ & watch \"npm run build:demos\" ./src/stylus/",
    "release:clean": "rimraf ./dist",
    "release:copy": "cpx \"./src/**/{*.js,*.css,*.html,*.eot,*.svg,*.ttf,*.woff,*.woff2}\" ./dist",
    "release": "npm-run-all -s release:clean release:copy",
    "server": "browser-sync start --server src",
    "watch": "npm run watch:dmeos & npm run server",
    "start": "npm run vendor & npm run watch"
  },
  "author": "Keita Okamoto <ok@aaa.email.ne.jp>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.1.21",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.1.20",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "bootstrap": "^3.3.5",
    "browser-sync": "^2.10.0",
    "browserify": "^12.0.1",
    "cpx": "^1.2.1",
    "nib": "^1.1.0",
    "npm-run-all": "^1.2.12",
    "rimraf": "^2.4.3",
    "stylus": "^0.52.0",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  },
  "dependencies": {
    "@all-user/ok-blocks": "file:../ok-blocks",
    "xtend": "^4.0.0"
  }
}
