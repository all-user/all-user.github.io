$block_color = transparent
$masking_color = white
div
  position relative

body
  padding 0
  margin 0
  width 100%
  height auto
  background $masking_color
  .container
    width 100%
    height 100vh
    overflow visible
    $pad = 0px
    padding-left $pad
    padding-right $pad
    iframe
      display block
      position absolute
      top -100%
      bottom -100%
      left -100%
      right -100%
      margin auto
      z-index 0
    #wrapper
      position absolute
      top -100%
      bottom -100%
      left -100%
      right -100%
      margin auto
      background $block_color
      z-index 100
      .mask
        position absolute
        background $masking_color
      .lines-emblem
        position absolute
